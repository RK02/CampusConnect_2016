<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="#FFFFFF"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/iv_icon_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_bookmark_24_black"
            android:background="@drawable/bk_notification_icon"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/iv_icon_notification"
            android:layout_toLeftOf="@+id/tv_notification_timestamp"
            android:text="New assignment added."
            android:textColor="@color/ColorTextInfo"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/tv_notification_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_notification"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="10m ago"
            android:textColor="@color/ColorTextInfo"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>