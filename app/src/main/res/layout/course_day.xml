<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container_timetable_timings_sat"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_day_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="PH:"
            android:textColor="@color/ColorTextInfo"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/et_startTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_courseSection"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_upload"
                android:hint="Start Date"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="08:00"
                android:textColor="@color/ColorTextInfo"
                android:textColorHint="#A0A0A0"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_endTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_courseSection"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_upload"
                android:hint="End Date"
                android:text="09:00"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/ColorTextInfo"
                android:textColorHint="#A0A0A0"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

